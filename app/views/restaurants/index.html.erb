<h1>Restaurants</h1>
<ul>
  <% @restaurants.each do |restaurant| %>
    <li><%= restaurant.name %> (<%= restaurant.address %>)</li>
    <%= link_to "Edit this restaurant", edit_restaurant_path(restaurant), class: "btn btn-primary"%>
  <% end %>
</ul>
<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary"%>

